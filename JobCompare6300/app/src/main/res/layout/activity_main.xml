<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainmenu"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button_enter_current_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_current_job"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_enter_job_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_job_details"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_compare_jobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compare_jobs"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_set_comparison_weights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_comparison_weights"
            android:textAlignment="textStart"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>